{
  "compilerOptions": {
    "target": "ES2015",
    // "module": "esnext",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // "outDir": "./dist"
    "outDir": "./src"
  },
  "include": [
    "./src-ts"
  ],
  "exclude": [
    "./src-ts/templates"
  ]
}