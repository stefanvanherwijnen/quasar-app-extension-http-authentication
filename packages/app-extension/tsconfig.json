{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["./src/templates"]
}
